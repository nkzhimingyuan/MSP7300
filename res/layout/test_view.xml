<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView         
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="测试日志:"
        android:textSize="17sp"
        
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="270dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        
        <TextView
            android:id="@+id/Log_info_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
            android:textSize="16sp"
            />
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:text="测试进度:"
            android:textSize="17sp" />

        <ProgressBar
            android:id="@+id/progressbar_updown"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:max="100"
            android:progress="0"
            android:secondaryProgress="70" >
        </ProgressBar>
    </LinearLayout>


<RelativeLayout 
      android:layout_width="fill_parent"
        android:layout_height="wrap_content"  
     android:layout_alignParentBottom="true"
            >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"  
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"   
  
        >

        <Button
            android:id="@+id/test_download"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_download_style" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <Button
            android:id="@+id/test_start"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_starttest_style"  />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <Button
            android:id="@+id/test_stop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_stoptest_style" />
    </LinearLayout>
</RelativeLayout>
</LinearLayout>